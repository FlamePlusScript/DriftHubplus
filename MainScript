local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- starting notications --

OrionLib:MakeNotification({
	Name = "Drift Hub+",
	Content = "Drift Hub+ has been executed",
	Image = "rbxassetid://4483345998",
	Time = 5
})

-- config save --

local MainWindow = OrionLib:MakeWindow({Name = "Drift Hub+", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionFolder"})

-- Info Tab --

local InfoTab = MainWindow:MakeTab({
	Name = "Info",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

InfoTab:AddParagraph("Version","Drift Hub version 1.6")
InfoTab:AddParagraph("Credits","Flame+ (Creator), Rifleman (Tester)")
InfoTab:AddParagraph("Discord","https://discord.gg/DMvpVBVrea")
InfoTab:AddParagraph("Updates","Auto Open Script on some games. (COMING SOONS), Keybinds for Fly and No-Clip, as well as Auto Open scripts for all games, and custom script made for Drift Hub+")
InfoTab:AddParagraph("Supported Games","All supported games are inside of the Discord there it lists what script to use to find that needed script.")

-- Main Scripts --

local MainTab = MainWindow:MakeTab({
	Name = "Main Scripts",
